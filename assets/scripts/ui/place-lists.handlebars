{{#each places  as |place|}}

  <div data-id="{{place.id}}" class="entry panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-6 col-sm-8 col-md-10">
          <h4 class="panel-title">{{place.name}}</h4>
        </div>
        {{> data-controls place=place }}
      </div>
    </div>

    <div class="panel-body">
      <div>
        <strong>Address:</strong>
        {{place.address}}
      </div>
      <div class="pad-bottom">
        {{!-- {{#each place.notes as |note|}}
          {{note.content}}
        {{else}} --}}
          {{#if place.description}}
            <strong>Description: </strong>
            {{place.description}}
          {{else}}
            No description yet.
          {{/if}}
        {{!-- {{/each}} --}}
      </div>
      <div id="update-{{place.id}}-collapse" class="panel-collapse collapse">
        {{> data-forms place=place }}
      </div>
    </div>
  </div>

{{else}}

  <div class="entry row">
    No places saved. Add a place using the "New Place" form above.
  </div>

{{/each}}