{{#each places  as |place|}}

  <div data-id="{{place.id}}" class="entry row">
    <div class="data col-xs-10">
        <div class="col-xs-6">
          {{place.name}}
          
        </div>
        <div class="col-xs-6">
          {{place.address}}
        </div>
        <div class="col-xs-12">{{#if place.description}}
          {{place.description}}
        {{else}}
          No decription available.
        {{/if}}
        </div>
    </div>
    {{> data-controls}}
    {{> data-forms place=place }}
  </div>

{{else}}

  <div class="entry row">
    No places saved. Add a place using the "New Place" form above.
  </div>

{{/each}}