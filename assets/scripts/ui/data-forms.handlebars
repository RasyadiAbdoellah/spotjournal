  <div id="update-{{place.id}}-container">
    <form id="update-{{place.id}}" class="update-place form-horizontal">
    <div class="form-group">
      <label class="col-xs-2 control-label" for="{{place.id}}-name">Name:</label>
      <div class="col-xs-10">
      <input id="{{place.id}}-name"  class="col-xs-10 form-control" type="text" name="place[name]" value="{{place.name}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label" for="{{place.id}}-address">Address:</label>
      <div class="col-xs-10">
      <input id="{{place.id}}-address" class="col-xs-10 form-control" type="text" name="place[address]" value="{{place.address}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="{{place.id}}-descrip">Description:</label>
      <div class="col-sm-10">
      <textarea id="{{place.id}}-descrip" name="place[description]" class="form-control" rows="3">{{place.description}}</textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>